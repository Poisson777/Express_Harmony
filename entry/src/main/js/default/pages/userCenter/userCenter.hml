<div class="main_background" style="display : flex; flex-direction : column;" >
    <div style="width: 100%;height: 50px;background-color: #FFFFFF;top: 20px;">

    </div>


    <div class="second_background">
        <text class="userName_text">
            {{userName}}
        </text>
        <text style="top: 110px;left: -15px;">{{number_finished}}</text>
        <text style="top: 110px;left: 85px;">{{number_unfinished}}</text>
        <label style="position: absolute;top: 140px;left:55px;font-size: 20px;">寄件数</label>
